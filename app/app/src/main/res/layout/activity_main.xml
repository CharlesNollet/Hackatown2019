<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:text="@string/choose_game_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chooseGameMessage"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="24sp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="@string/new_game_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/newGameButton"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/chooseGameMessage"
            android:onClick="goToNewGameActivity"/>

    <Button
            android:text="Game 1"
            android:layout_width="0dp"
            android:layout_height="10mm"
            android:id="@+id/game1Button"
            android:background="@color/playerColor"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/newGameButton"/>

    <Button
            android:text="Game 2"
            android:layout_width="0dp"
            android:layout_height="10mm"
            android:id="@+id/game2Button"
            android:background="@color/playerColor"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/game1Button"/>

    <Button
            android:text="Game 3"
            android:layout_width="0dp"
            android:layout_height="10mm"
            android:id="@+id/game3Button"
            android:background="@color/playerColor"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/game2Button"/>

    <Button
            android:text="Game 4"
            android:layout_width="0dp"
            android:layout_height="10mm"
            android:id="@+id/game4Button"
            android:background="@color/playerColor"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/game3Button"/>
</androidx.constraintlayout.widget.ConstraintLayout>